{
  "name": "Tab Recording",
  "description": "Minimal example for recording any Chrome tab or any screen/window in manifest V3",
  "version": "1.0",
  "manifest_version": 3,
  "action":{
    "default_popup":"popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches":["<all_urls>"],
      "js":["content.js"]
    }
  ],
  "permissions": ["tabs", "activeTab", "desktopCapture"]
}